{
  "expo": {
    "name": "Solar System",
    "slug": "SolarSystem",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "resizeMode": "cover",
      "image": "./assets/splash.png",
      
      "backgroundColor": "#151515"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#151515"
      }
    },
    "androidStatusBar": {
      "backgroundColor": "#151515",
      "barStyle": "light-content"
    },
    "androidNavigationBar": {
      "backgroundColor": "#151515",
      "barStyle": "light-content"
    }
  }
}
